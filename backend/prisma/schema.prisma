generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  MEMBER
  ADMIN
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED // optional - just in case we want to add refunds or allow users to cancel but keep access until end date
  EXPIRED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subscriptions Subscription[] // 1:N - user can have multiple active subscriptions | e.g. gym subscription, personal training subscription, etc.
}

model MembershipPlan {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  duration    Int      // duration in days
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subscriptions Subscription[] // 1:N - a plan can be used in multiple subscriptions by multiple users
}

model Subscription {
  id             Int      @id @default(autoincrement())
  userId         String
  planId         Int
  status         SubscriptionStatus @default(ACTIVE)
  startDate      DateTime
  endDate        DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id])
  plan  MembershipPlan @relation(fields: [planId], references: [id])

  @@unique([userId, planId]) // prevent duplicate subscriptions to same plan
}

