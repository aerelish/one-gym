{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./",
		"forceConsistentCasingInFileNames": true

		// baseUrl and paths for module aliasing - this will only run on build with tsc-alias
		// !uncomment this on build for module aliasing to work, otherwise it will break the build
		// "baseUrl": ".",
		// "paths": {
		// 	"#*": ["src/*"]
		// }
	},
	"include": ["**/*.ts"],
	"exclude": ["dist"],
	"isolatedModules": true
}
